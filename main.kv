GridLayout:
    
    cols:1
    MDFloatLayout:
        
        MDGridLayout:
            md_bg_color:app.theme_cls.primary_color
            rows: 1
            pos_hint: {"top":1,"left":1}
            size_hint : 1,0.05
            Image:
                source : "icons/002-sunrise.png"
            Image:
                source:"icons/001-sun.png"

        MDFloatLayout:
            md_bg_color:app.theme_cls.primary_color
            rows : 1
            pos_hint: {"top":0.95,"left":1}
            size_hint : 1,0.15
            Image:
                source:"icons/003-sunset.png"
                pos_hint:{"top":1,'right':0.25}
                size_hint:0.25,0.5
            Image:
                id:avatar_image
                source:"icons/avatars/man.png"
                pos_hint:{"top":1,'right':0.75}
                size_hint:0.5,1
            Image:
                source:"icons/007-crescent-moon.png"
                pos_hint:{"top":1,'right':1}
                size_hint:0.25,0.5

        ScreenManager:
            id:screen_manager
            pos_hint: {"top":0.799,"left":1}
            size_hint : 1,0.799

            LoginScreen:
                name : "login_screen"
                id: login_screen  

            HomeScreen:
                name : "home_screen"
                id: home_screen  
            SettingScreen:
                name : "setting_screen"
                id: setting_screen  
            ChangeAvatarScreen:
                name: "change_avatar_screen"
                id: change_avatar_screen
            AddFriendScreen:
                name: "add_friend_screen"
                id: add_friend_screen
            AddWorkoutScreen:
                name: "add_workout_screen"
                id: add_workout_screen

            FriendsListScreen:
                name:"freinds_list_screen"
                id:freinds_list_screen
            FriendWorkoutScreen:
                name:"friend_workout_screen"
                id:friend_workout_screen
            